          "chicken-maze.run"
        end
      end

      mab.li do
        mab.a(:href => "https://wkndr.computer/") do
          "wkndr.computer"
        end
      end

      mab.li do
        mab.a(:href => "https://copypasta.cloud/") do
          "copypasta.cloud"
        end
      end
    end
  end
}
